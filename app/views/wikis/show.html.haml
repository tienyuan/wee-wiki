%h1 
  = @wiki.title
%p 
  = markdown @wiki.description
%p
  - if current_user
    = link_to "Add Page", new_wiki_page_path(@wiki)
  - if current_user && (current_user == @wiki.owner || @wiki.private == false)
    = link_to "Edit Wiki", edit_wiki_path(@wiki)

%h4 Wiki Pages
%ul
  - @pages.each do |page|
    %li
      = link_to page.title, wiki_page_path(@wiki, page)


%h4 Current Collaborators
- if current_user
  = render partial: 'collaborations', locals: {wiki: @wiki, collaboration: @collaboration}

%ul 
  - @collaborations.each do |user|
    %li
      = user.username 
      = link_to "remove", wiki_collaboration_path(@wiki, user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' }