%div.row
  %div.col-md-8
    = form_for wiki do |f|
      %div.form-group
        = f.label :title
        = f.text_field :title, id: 'wiki-title', class: 'form-control'
      %div.form-group
        = f.label :description
        = f.text_field :description, id: 'wiki-description', class: 'form-control'
      - if current_user.premium
        %div.form-group
          = f.label :private, class: 'checkbox' do
            = f.check_box :private, id: 'wiki-private'
            Private Wiki
      - else
        %div.form-group
          Upgrade for $
          = @subscription
          for Private Wikis!
      %div.form-group
        = f.submit "Submit", class: 'btn btn-primary'
        = link_to "Cancel", @wiki, class: 'btn btn-default'