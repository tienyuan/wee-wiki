%div.row
  %div.col-md-12
    %h1 
      = @wiki.title
      - if @wiki.private
        %small <span class="glyphicon glyphicon-lock"></span>
    %div 
      = show_markdown_html @wiki.description
      = link_to "Back to Index", @wiki, class: 'btn btn-primary'
    %hr
%div.row
  %div.col-md-8
    %h2
      = @page.title
    %p 
      = show_markdown_html @page.body
  %div.col-md-4
    %div.pull-right
      %br 
        - if current_user && policy(@wiki).show?
          = link_to " Edit Page ", edit_wiki_page_path(@wiki, @page), class: 'btn btn-default'
          %br
          = link_to "Delete Page", [@wiki, @page], method: :delete, data: { confirm: 'Are you sure you want to delete this page?' }, class: 'btn btn-sm btn-link'